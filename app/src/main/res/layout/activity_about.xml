<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.AboutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_text"
        android:text="关于我们"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_marginHorizontal="180dp"
        android:layout_marginBottom="90dp"
        android:text="@string/xsl_about"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fadeScrollbars="false"
        android:id="@+id/text_content"
        android:layout_below="@id/about_text"/>
    <Button
        android:layout_width="@dimen/close_btn_size"
        android:layout_height="@dimen/close_btn_size"
        android:id="@+id/close_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="134dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/icon_close"/>

</RelativeLayout>