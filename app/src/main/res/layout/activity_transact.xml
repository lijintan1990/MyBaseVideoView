<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TransactActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/back"
            android:id="@+id/back_btn"/>

        <ImageView
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:id="@+id/left_indicate"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/back_btn"
            android:layout_alignBottom="@+id/back_btn"
            android:src="@mipmap/xsl_left_instructor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/left_indicate"
            android:layout_alignBottom="@+id/left_indicate"
            android:text="返回首页"
            android:textSize="16sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我知道了"
            android:textSize="16sp"
            android:id="@+id/iknwn_btn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/in_1"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="团队介绍"
            android:layout_toLeftOf="@id/in_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/in_2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/in_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="团队介绍"
            android:layout_toLeftOf="@id/in_2"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/rightButtons">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/appliances"
            android:background="@drawable/xsl_appliances_bkg"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_appliances_bkg"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_clothes"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/langugue_activity_btn"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_langugue"/>

    </LinearLayout>

</LinearLayout>