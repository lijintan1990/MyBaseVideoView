<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:launchMode="singleTask"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!--com.next.easynavigation.view.EasyNavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.next.easynavigation.view.EasyNavigationBar-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="12dp"
        android:layout_marginVertical="30dp">

        <com.kk.taurus.playerbase.widget.BaseVideoView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000000"
            android:layout_margin="1dp"
            android:id="@+id/one" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/videoImageView"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/play_btn"
                    android:background="@mipmap/player_icon_start_play"
                    android:layout_centerInParent="true"/>

                <com.example.mybasevideoview.view.subTitle.SubtitleView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"/>
            </RelativeLayout>


        </com.kk.taurus.playerbase.widget.BaseVideoView>

        <include layout="@layout/layout_progress"></include>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_marginVertical="30dp"
        android:layout_marginRight="36dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:id="@+id/subMovie">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:id="@+id/subImageView"/>

            <include layout="@layout/layout_sub_film"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#000000"
            android:id="@+id/wholeMovie">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:id="@+id/wholeImageView"/>

            <include layout="@layout/layout_whole_film"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>