<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".view.langugueActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="字幕选择"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_marginBottom="60dp"
        />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chinese_btn"
            android:background="@color/translucent"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_left_size"
            android:paddingRight="@dimen/padding_right_size"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="简体中文"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cantonese_btn"
            android:background="@color/translucent"
            android:drawableLeft="@mipmap/xsl_langugue_complex"
            android:drawablePadding="@dimen/draw_padding_text"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_left_size"
            android:paddingRight="@dimen/padding_right_size"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="正体中文"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/english_btn"
            android:background="@color/translucent"
            android:drawableLeft="@mipmap/xsl_langugue_english"
            android:drawablePadding="@dimen/draw_padding_text"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_left_size"
            android:paddingRight="@dimen/padding_right_size"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="ENGLISH"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:src="@mipmap/close_pay"
        android:background="@color/translucent"/>
</RelativeLayout>