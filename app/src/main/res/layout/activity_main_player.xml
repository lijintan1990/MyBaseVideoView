<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000"
    tools:context=".MainPlayerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/left_layout">
        <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/back"
            android:id="@+id/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chapter_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:ems="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chapter_title_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:ems="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chapter_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:ems="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/main_controller_text_view_curr_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="00:00:00"/>
            <com.example.mybasevideoview.view.MySeekBar
                android:id="@+id/main_controller_seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:focusable="false"
                android:splitTrack="false"
                android:progressDrawable="@drawable/style_video_player_video_seekbar"
                android:thumb="@null"/>
            <TextView
                android:id="@+id/main_controller_text_view_total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="00:00:00"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_layout"
            android:layout_below="@+id/controller">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/fill_unit_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000000"/>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/xsl_video_shape"
                        android:clickable="true"
                        android:id="@+id/p1" >
                        <RelativeLayout
                            android:clickable="true"
                            android:id="@+id/click_view1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:clickable="true"
                                android:id="@+id/arrow1"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>

                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p2" >
                        <RelativeLayout
                            android:clickable="true"
                            android:id="@+id/click_view2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:clickable="true"
                                android:id="@+id/arrow2"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p3" >
                        <RelativeLayout
                            android:clickable="true"
                            android:id="@+id/click_view3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:clickable="true"
                                android:id="@+id/arrow3"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <View
                        android:id="@+id/fill_unit_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000000"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom"
                    android:layout_alignParentBottom="true">
                    <View
                        android:id="@+id/fill_unit_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000000"/>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p7" >
                        <RelativeLayout
                            android:id="@+id/click_view7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:clickable="true"
                                android:rotation="180"
                                android:id="@+id/arrow7"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p8" >
                        <RelativeLayout
                            android:id="@+id/click_view8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:clickable="true"
                                android:rotation="180"
                                android:id="@+id/arrow8"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p9" >
                        <RelativeLayout
                            android:id="@+id/click_view9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:clickable="true"
                                android:rotation="180"
                                android:id="@+id/arrow9"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <View
                        android:id="@+id/fill_unit_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top"
                    android:layout_above="@+id/bottom"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p10">
                        <RelativeLayout
                            android:id="@+id/click_view10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:rotation="270"
                                android:id="@+id/arrow10"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p11" >
                        <RelativeLayout
                            android:id="@+id/click_view11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask11"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:rotation="270"
                                android:id="@+id/arrow11"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p12" >
                        <RelativeLayout
                            android:id="@+id/click_view12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask12"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:rotation="270"
                                android:id="@+id/arrow12"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top"
                    android:layout_above="@+id/bottom"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p4" >
                        <RelativeLayout
                            android:id="@+id/click_view4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:rotation="90"
                                android:id="@+id/arrow4"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p5" >
                        <RelativeLayout
                            android:id="@+id/click_view5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:rotation="90"
                                android:id="@+id/arrow5"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                    <com.kk.taurus.playerbase.widget.BaseVideoView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@drawable/xsl_video_shape"
                        android:id="@+id/p6" >
                        <RelativeLayout
                            android:id="@+id/click_view6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:id="@+id/mask6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mask_view_color" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/jiantou"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:rotation="90"
                                android:id="@+id/arrow6"/>
                        </RelativeLayout>
                    </com.kk.taurus.playerbase.widget.BaseVideoView>
                </LinearLayout>

                <com.kk.taurus.playerbase.widget.BaseVideoView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/top"
                    android:layout_above="@+id/bottom"
                    android:layout_toRightOf="@+id/left"
                    android:layout_toLeftOf="@+id/right"
                    android:id="@+id/p13">




                    <RelativeLayout
                        android:id="@+id/center_black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.example.mybasevideoview.view.subTitle.SubtitleView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/normal_subtitle"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="6dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerInParent="true">
                            <TextView
                                android:id="@+id/chapter_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/chapter_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/play_time_info"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#aa000000"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                    <com.example.mybasevideoview.view.PlayControlMaskView
                        android:id="@+id/play_touch_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"/>
                    <ImageButton
                        android:id="@+id/resume_btn"
                        android:src="@mipmap/play"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.kk.taurus.playerbase.widget.BaseVideoView>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:id="@+id/rightButtons">
        <!--Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/about_btn"
            android:background="@drawable/xsl_about"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:id="@+id/langugue_btn"
            android:background="@drawable/xsl_langugue"/-->
        <Button
            android:id="@+id/chapter_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_chapter"
            android:text="01" />
        <Button
            android:id="@+id/appliances_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_appliances" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/action_btn"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_action"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/word_btn"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_word"/>


    </LinearLayout>
</LinearLayout>