<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#0000ff"
    tools:context=".MainPlayerActivity">

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/left_layout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@mipmap/back"
            android:id="@+id/back_btn"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="#000000"/>
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:id="@+id/p1" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:id="@+id/p2" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:id="@+id/p3" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_controller_bottom_gradient"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pub_controller_image_view_play_state"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/selector_play_state"/>
            <TextView
                android:id="@+id/pub_controller_text_view_curr_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="00:00:00"/>
            <SeekBar
                android:id="@+id/pub_controller_seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:focusable="false"
                android:splitTrack="false"
                android:progressDrawable="@drawable/style_video_player_video_seekbar"
                android:thumb="@drawable/selector_seek_bar_thumb"/>
            <TextView
                android:id="@+id/pub_controller_text_view_total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="00:00:00"/>
            <ImageView
                android:id="@+id/pub_controller_image_view_switch_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:layout_marginRight="5dp"
                android:src="@mipmap/icon_full_screen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:layout_marginTop="1dp"
            android:layout_above="@+id/controller">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="#000000"/>
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:id="@+id/p9" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:id="@+id/p8" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:id="@+id/p7" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:layout_above="@+id/bottom"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginBottom="1dp"
                android:id="@+id/p12" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginBottom="1dp"
                android:id="@+id/p11" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:id="@+id/p10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:layout_above="@+id/bottom"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:orientation="vertical">
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginBottom="1dp"
                android:id="@+id/p4" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_marginBottom="1dp"
                android:id="@+id/p5" />
            <com.kk.taurus.playerbase.widget.BaseVideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:id="@+id/p6" />
        </LinearLayout>

        <com.kk.taurus.playerbase.widget.BaseVideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_below="@+id/top"
            android:layout_above="@+id/bottom"
            android:layout_toRightOf="@+id/left"
            android:layout_toLeftOf="@+id/right"
            android:background="#000000"
            android:id="@+id/p13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/rightButtons">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/appliances"
            android:background="@drawable/xsl_appliances_bkg"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_appliances_bkg"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_clothes"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/langugue_activity_btn"
            android:layout_marginVertical="10dp"
            android:background="@drawable/xsl_langugue"/>

    </LinearLayout>


</LinearLayout>